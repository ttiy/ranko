<h1><%= @str%></h1>
<div class="content-wrapper">
  <% if @articles.present? %>
    <section class="content-header">
    </section>
    <section class="content-body">
      <div class="box-body">
        <div class="row">
          <div class="col-sm-12">
            <% @articles.each do |article| %>
              <div class="item shadow p-3 mb-5 bg-white rounded">
                <%= article.user.last_name + article.user.first_name %>
                <%= markdown(article.body) %>
                <%= markdown(article.emotion) %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </section>
  <% end %>
</div>